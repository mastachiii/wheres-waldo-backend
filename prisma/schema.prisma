generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Level {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  sceneName String    @unique
  waldo     String? // Coordinates of character on level
  wenda     String?
  wilma     String?
  woof      String?
  odlaw     String?
  wizard    String?
  attempts  Attempt[]
}

model Attempt {
  id           Int    @id @default(autoincrement())
  timeFinished String
  Level        Level? @relation(fields: [levelId], references: [id])
  levelId      Int?
}
